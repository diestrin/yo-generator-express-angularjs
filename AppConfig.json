{
    "app": {
        "dev"          : ".dev",
        "dist"         : ".dist",
        "ngModule"     : "myAwesomeApp",
        "src"          : "public",
        "templatesSrc" : "templates"
    },

    "livereload": {
        "files" : [ "{.dev,.dist,public}/**/*.html", "{.dev,.dist,public}/styles/{,*/}*.css", "{.dev,.dist,public}/scripts/{,*/}*.js" ],
        "port"  : 1717
    },

    "scripts": {
        "libraries" : [
            "public/lib/angular-unstable/angular.min.js",
            "public/lib/angular-resource/angular-resource.min.js"
        ],
        "src"       : "scripts"
    },

    "server": {
        "port" : 3000,
        "src"  : "server"
    },

    "styles": {
        "src"   : "styles"
    }
}